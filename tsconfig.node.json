{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist-api",
    "rootDir": "./api",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}